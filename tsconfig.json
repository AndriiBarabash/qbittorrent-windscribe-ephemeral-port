{
  "compilerOptions": {
    "lib": [
      "es6",
      "ES2016",
      "ES2018",
    ],
    "target": "ES2017",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true, // needed until https://github.com/sindresorhus/got/issues/2051 gets resolved
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true
  },
}